{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonJS",
    "lib": ["ES2017", "dom"],
    "outDir": "./dist",
    "rootDir": "src",
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "src": ["src"]
    }
  }
}
